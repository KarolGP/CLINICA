<table border="solid">
    <h2>Lista Citas Medicas</h2>
    <thead>
        <tr>
            <th>Cedula Paciente</th>
            <th>Cedula Medico</th>
            <th>Fecha</th>
        </tr>
    </thead>
    <tbody>
        {{#each citas}}
        <tr>
            <td>{{cedula_paciente}}</td>
            <td>{{cedula_medico}}</td>
            <td>{{formatearFecha fecha}}</td>
        </tr>
        {{/each}} 
    </tbody>
</table>
<a href="/citas/agregar-cita">Agregar Cita Medica</a>